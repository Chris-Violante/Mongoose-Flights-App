<%- include('../partials/header') %>

<h1>Flight Details</h1>
<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight No. </div>
  <div><%= flight.flightNo %></div>
  <div>Departs: </div>
  <div><%= flight.departs%></div>
</section>

<h2>Destination</h2>
<form id="add-destination-form" action="/flights/<%= flight._id %>/destinations" method="POST">
  <label>Airport</label>
  <select name="airport">
    <option value="AUS">AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select>
  <label>Arrival</label>
  <input type="date" name="arrival">
  <input type="submit" value="Add Destination">
</form>

<% if (flight.destination.length) { %>
  <table>
    <tbody>
      <% flight.destination.forEach(function(d) { %>
        <tr>
          <td><%= d.airport %></td>
          <td><%= d.arrival %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Destination Yet</h5>
<% } %>

<h2>Tickets</h2>

<a href="/flights/<%= flight._id %>/tickets/new">Add Ticket</a>

<% if (tickets.length) { %>
  <table>
    <tbody>
      <% tickets.forEach(function(t) { %>
        <tr>
          <td>Seat: <%= t.seat %></td>
          <td>Price: $<%= t.price %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Tickets Yet</h5>
<% } %>



<%- include('../partials/footer') %>